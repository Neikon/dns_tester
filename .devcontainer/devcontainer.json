// Dev container for DNS Tester targeting Fedora 43 to mirror the expected runtime.
{
  "name": "DNS Tester (Fedora 43)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "postCreateCommand": "echo \"# Container ready for DNS Tester\"",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/usr/bin/fish",
        "python.defaultInterpreterPath": "/usr/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools"
      ]
    }
  }
}
